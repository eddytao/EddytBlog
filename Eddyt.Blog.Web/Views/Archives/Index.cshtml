@model Eddyt.Blog.Data.Article

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-mb-12" id="main" role="main">
    <article class="post">
        <h1 class="post-title"><a href="#">@Model.Title</a></h1>
        <div class="post-content">
            @Html.Raw(Model.Content)
        </div>
        <p class="tags"><span class="glyphicon glyphicon-tags"></span>&nbsp;&nbsp;@Model.Tag</p>
        @*<p class="tags"><span class="glyphicon glyphicon-tags"></span>&nbsp;&nbsp;没有贴标签=、=</p>*@
        <p class="hidden-xs post-meta">  <span class="glyphicon glyphicon-calendar"></span> @Model.CreateTime&nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-eye-open"></span> @Model.ViewCount &nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-edit"></span> <a href="~/Archives/@Model.ArticleNo/#comments">@ViewBag.CommentsCount 条吐槽</a>&nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-user"></span> <a href="#">@Model.CreateName</a></p>
    </article>

    <div id="comments">
        <h3>已有 @ViewBag.CommentsCount 条评论</h3>

        <ol class="comment-list">
            @foreach (var comment in ViewBag.Comments)
            {
                <li class="comment-body comment-parent comment-odd">
                    <div class="comment-author">
                        <img class="avatar" src="~/Image/head.jpg" alt="john" width="32" height="32">        <cite class="fn">@comment.Name</cite>
                    </div>
                    <div class="comment-meta">
                        <a href="#">@comment.CreateTime.AddHours(8)</a>
                    </div>
                    <div class="comment-content">
                        <p>@comment.Content</p>
                    </div>
                    <div class="comment-reply">
                        <a href="#" rel="nofollow">回复</a>
                    </div>
                </li>
            }
        </ol>


        <div id="respond-post-8" class="respond">
            <div class="cancel-comment-reply">
                <a id="cancel-comment-reply-link" href="#" rel="nofollow" style="display:none" onclick="return TypechoComment.cancelReply();">取消回复</a>
            </div>

            <h3 id="response">添加新评论</h3>
            <form method="post" action="~/Archives/AddComment" id="comment-form" role="form">
                <input type="hidden" name="ArticleId" value="@Model.ArticleId" />
                <input type="hidden" name="ArticleNo" value="@Model.ArticleNo" />
                <p>
                    <label for="Name" class="required">称呼</label>
                    <input type="text" name="Name" class="form-control" id="Name" value="" required="">
                </p>
                <p>
                    <label for="Email" class="required">Email</label>
                    <input type="email" name="Email" id="Email" class="form-control text" value="" required="">
                </p>
                <p>
                    <label for="Content" class="required">内容</label>
                </p>
                <textarea rows="8" cols="50" name="Content" id="Content" class="form-control textarea" required=""></textarea>
                <p></p>
                <p>
                    <button type="submit" class="btn btn-primary submit">提交评论</button>
                </p>
            </form>
        </div>
    </div>
</div>


