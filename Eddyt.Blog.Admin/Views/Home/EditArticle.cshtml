@model Eddyt.Blog.Data.Article
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <ol class="breadcrumb">
        <li><a href="/">主页</a></li>
        <li><a href="~/">文章管理</a></li>
        <li class="active">编辑文章</li>
    </ol>
</p>

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <a href="~/" class="list-group-item active">文章管理</a>
            <a href="#" class="list-group-item">评论管理</a>

        </div>
    </div>
    <div class="col-md-9">

        <h2>Edit Article</h2>
        <form role="form" action="~/Home/EditArticle" method="POST" id="articleForm">
            <div class="form-group">
                <label for="Title">标题</label>
                <input type="text" class="form-control" id="Title" name="Title" placeholder="标题" value="@Model.Title">
            </div>
            <div class="form-group">
                <label for="Tag">标签</label>
                <input type="text" class="form-control" id="Tag" name="Tag" placeholder="标签" value="@Model.Tag">
            </div>
            <div class="form-group">
                <label for="Content">内容</label>
                <textarea class="form-control" rows="10" id="Content" name="Content">@Html.Raw(Model.Content)</textarea>
                @*<script id="articleContainer" name="Content" type="text/plain">@Html.Raw(Model.Content)</script>*@
            </div>
            <input type="hidden" name="ArticleId" value="@Model.ArticleId" />
            <input type="hidden" name="ArticleNo" value="@Model.ArticleNo" />
            <button type="submit" class="btn btn-default" id="submitArticle">保存</button>
        </form>

    </div>
</div>

